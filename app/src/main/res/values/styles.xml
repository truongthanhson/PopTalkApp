<resources>

    <style name="PopTalk" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_up</item>
    </style>

    <style name="CollectionsItem.Title" parent="">
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="CollectionsItem.Description" parent="">
        <item name="android:textColor">@color/textColorSecondary</item>
    </style>

    <style name="SpeakItem.Description" parent="">
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="SpeakItem.Language1" parent="">
        <item name="android:textColor">@color/textColorSecondary</item>
    </style>

    <style name="TextAppearance.SpeakItemList.Caption" parent="">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="TextAppearance.SpeakItemDetail.RecordedTime" parent="">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="TextAppearance.SpeakItemDetail.Location" parent="">
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="TextAppearance.SpeakItemDetail.Time" parent="">
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="TextAppearance.RecordPanel.Button.Title" parent="">
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="NavigationDrawer.Background" parent="">
        <item name="android:background">@color/half_black</item>
    </style>

    <style name="NavigationDrawer.Header.Background" parent="">
        <item name="android:background">@color/colorAccent</item>
    </style>

    <style name="NavigationDrawer.Item.TextApperance" parent="">
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="PopTalk.AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorPrimary">#03a9f4</item>
        <item name="colorAccent">#03a9f4</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/text_primary_dark</item>
        <!-- Used for the background -->
        <item name="android:background">@drawable/dialog_background</item>
    </style>

    <!-- ToolBar -->
    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:background">@color/black</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

    <declare-styleable name="MultiLevelListView">
        <attr name="nestType">
            <enum name="single" value="0" />
            <enum name="multiple" value="1" />
        </attr>

        <attr name="alwaysExtended" format="boolean" />
        <attr name="list" format="reference" />
    </declare-styleable>
</resources>
